{
  "name": "rz-bootstrap-scss",
  "version": "1.0.0",
  "description": "revize bootstrap conversion to scss",
  "main": "index.js",
  "scripts": {
    "build-task:scss-compile": "node-sass-chokidar --source-map false _assets_/scss/ -o _assets_/css",
    "build-task:autoprefixer": "postcss _assets_/css/*.css --use autoprefixer -d _assets_/css",
    "sass:build": "npm-run-all -p build-task:*",
    "sass:watch": "chokidar '_assets_/scss/**/*' -c 'npm run sass:build'",
    "dev": "npm-run-all -p sass:*"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/shortnd/rz-bootstrap/issues"
  },
  "homepage": "https://github.com/shortnd/rz-bootstrap#readme",
  "dependencies": {
    "autoprefixer": "^8.6.1",
    "chokidar-cli": "^1.2.0",
    "global": "^4.3.2",
    "node-sass-chokidar": "^1.3.0",
    "npm-run-all": "^4.1.3",
    "postcss-cli": "^5.0.0",
    "sass": "^1.5.1"
  }
}
